# Application
NODE_ENV=development

# Database (matches docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cap_db

# LangChain / LangGraph
OPENAI_API_KEY=your_openai_api_key
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=cap

# Services Ports
API_GATEWAY_PORT=3000
OAUTH_SERVICE_PORT=3001
PORT=3001

# GitHub App
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=    # base64 -w0 < private-key.pem
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/auth/callback/github


# Auth
JWT_SECRET=                # min 32 chars, use: openssl rand -hex 32
APP_URL=http://localhost:3000
